<p id="notice"><%= notice %></p>

<h1>Products</h1>

<button type="button" onclick ="location.href = 'http://localhost:3000/doctors';">Doctors</button>
<button type="button" onclick ="location.href = 'http://localhost:3000/states';">States</button>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.TopDoctor + " " + product.TopDoctorPrescriptions.to_s %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Product', new_product_path %>